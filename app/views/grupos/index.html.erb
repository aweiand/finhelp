<p id="notice"><%= notice %></p>

<div class="pull-left">
  <%= link_to 'Novo Grupo', new_grupo_path, class: "btn btn-primary" %>
</div>

<fieldset class="col-md-12">
  <legend>Grupos</legend>

  <div class="table-responsive">
    <table class="table table-striped">
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupos.each do |grupo| %>
      <tr>
        <td><%= grupo.nome %></td>
        <td><%= link_to 'Show', grupo %></td>
        <td><%= link_to 'Edit', edit_grupo_path(grupo), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', grupo, method: :delete, data: { confirm: 'Tem Certeza?'}, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
    </table>

  </div>

  <div class="row">
    <%= will_paginate @grupos, inner_window: 1, outer_window: 1 %>
  </div>

</fieldset>