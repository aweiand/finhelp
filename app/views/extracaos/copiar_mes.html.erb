<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      Copiar do Mês e Editar
    </div>

    <%= form_tag copiar_extracaos_path do %>
    <div class="panel-body">

      <div class="col-md-12">
        <div class="row">
          <div class="col-md-3">
            <%= label_tag :mes, "Mês De:" %>
            <br />
            <%= number_field_tag "mes_de", Time.now.to_date.month, style: "width: 70%", required: true %>
          </div>
          <div class="col-md-3">
            <%= label_tag :sequencial, "Seq De:" %>
            <br />
            <%= number_field_tag "sequencial_de", 1, style: "width: 70%", required: true %>
          </div>
          <div class="col-md-3">
            <%= label_tag :mes, "Mês Para:" %>
            <br />
            <%= number_field_tag "mes_para", Time.now.to_date.month+1, style: "width: 70%", required: true %>
          </div>
          <div class="col-md-3">
            <%= label_tag :sequencial, "Seq Para:" %>
            <br />
            <%= number_field_tag "sequencial_para", 1, style: "width: 70%", required: true %>
          </div>
        </div>
        
        <hr />

        <div class="row">

          <div class="col-md-4">
            <%= label_tag :data, t(:data) %>
            <br />
            <%= text_field_tag :data, nil, class: "col-md-7 date-inp", required: true %>
          </div>

          <div class="col-md-4">
            <%= label_tag :dataemissao, t(:dataemissao) %>
            <br />
            <%= text_field_tag :dataemissao, nil, class: "col-md-7 date-inp", required: true %>
          </div>

          <div class="col-md-4">
            <%= label_tag :datavencimento, t(:datavencimento) %>
            <br />
            <%= text_field_tag :datavencimento, nil, class: "col-md-7 date-inp", required: true %>
          </div>

        </div>

        <div class="row">

          <div class="col-md-4">
            <%= label_tag :dataateste, t(:dataateste) %>
            <br />
            <%= text_field_tag :dataateste, nil, class: "col-md-7 date-inp", required: true %>
          </div>

          <div class="col-md-4">
            <%= label_tag :datapagamento, t(:datapagamento) %>
            <br />
            <%= text_field_tag :datapagamento, nil, class: "col-md-7 date-inp", required: true %>
          </div>

          <div class="col-md-4">
            <%= label_tag :dtemissaodocorigem, t(:dtemissaodocorigem) %>
            <br />
            <%= text_field_tag :dtemissaodocorigem, nil, class: "col-md-7 date-inp", required: true %>
          </div>

        </div>

        <div class="row">

          <div class="col-md-6">
            <%= label_tag :observacao, t(:observacao) %>
            <br />
            <%= text_area_tag :observacao, nil, required: true %>
          </div>

          <div class="col-md-6">
            <%= label_tag :numerodocorigem, t(:numerodocorigem) %>
            <br />
            <%= text_field_tag :numerodocorigem, nil, required: true %>
          </div>

        </div>
      </div>
    </div>

    <div class="panel-footer text-center">
      <%= submit_tag("Copiar", class: "btn btn-primary") %>
    </div>
    <% end %>
  </div>
</div>