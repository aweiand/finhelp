<%= form_with(model: banco, local: true, html: {class: "form-horizontal"}) do |form| %>
<% if banco.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
  <h2><%= pluralize(banco.errors.count, "error") %> prohibited this banco from being saved:</h2>

  <ul>
    <% banco.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% unless notice.blank? %>
<div class="alert alert-warning">
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<div class="form-inputs">

  <fieldset>
    <legend>Banco</legend>
    <div class="row">

      <div class="form-group col-md-4">
        <%= form.label :codigo, class: 'col-md-4 control-label' %>
        <div class="col-md-4">
          <%= form.text_field :codigo, class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-md-4">
        <%= form.label :nome, class: 'col-md-4 control-label' %>
        <div class="col-md-4">
          <%= form.text_field :nome, class: "form-control" %>
        </div>
      </div>

    </div>
  </fieldset>

  <div class="col-md-12 text-center">
    <%= form.submit("Salvar", class: "btn btn-sm btn-primary") %>
  </div>
</div>
<% end %>
